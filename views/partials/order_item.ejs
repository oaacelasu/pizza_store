<a href="/my_orders/receipt/<%= orders[i]._id %>"
   class="list-group-item list-group-item-action d-flex mx-auto gap-3 py-3"
   aria-current="true">
    <div class="d-flex gap-2 w-100 justify-content-between">

        <div class="mx-4">
            <h6 class="mb-0">Order: <%= orders[i]._id %></h6>
            <% for (let j = 0; j < orders[i].order_items?.length ?? 0; j++) {
                var product = orders[i].order_items[j].product;
            if(product.product_type !== "topping") { %>

                <div class="p-3 m-2 rounded-3 d-inline-flex">
                    <% if(product.product_type === 'main')  { %>
                        <img src="<%= product.image %>" class="img-fluid" width="96" height="96"
                             alt="...">

                        <div class="mx-3 flex-grow-1">
                            <h6 class="mb-1"><%= product.name %></h6>
                            <small>
                                Quantity: <%= orders[i].order_items[j].quantity %>
                            </small>
                            <br>
                            <small>
                                Toppings: <%= orders[i].order_items[j].toppings.length %>
                            </small>
                        </div>
                    <% } %>

                    <% if(product.product_type === 'side')  { %>

                        <div class="mx-3 flex-grow-1">
                            <img src="<%= product.image %>" class="img-fluid" width="96" height="96"
                                 alt="...">
                            <h6 class="mb-1"><%= product.name %></h6>
                            <small>
                                Quantity: <%= orders[i].order_items[j].quantity %>
                            </small>
                        </div>

                    <% } %>

                </div>

            <% } } %>

        </div>
        <div class="mx-4">
            <h6 class="opacity-50 text-nowrap">Date: <%= orders[i].updatedDate.toLocaleString() %></h6>
            <h6 class="mt-3 opacity-75">Status: <span
                        class="text-success"><%= orders[i].order_status %></span></h6>

            <h2><span class="badge bg-primary rounded-pill mt-3">
                                Total: <%= orders[i].total %>
                            </span></h2>

        </div>
    </div>
</a>
